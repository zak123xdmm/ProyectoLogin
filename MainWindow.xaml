<Window x:Class="PrimerLoginWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrimerLoginWPF"
        mc:Ignorable="d"
        Title="PrimerLogin(Intento)" WindowStartupLocation="CenterOwner" Height="870.85" Width="553.592" Icon="Imagenes\adult_2556984 (1).png">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Imagenes\dexter.jpg"
               Stretch="Fill"
               Opacity="0.7"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="184*"/>
            <RowDefinition Height="189*"/>
            <RowDefinition Height="153*"/>


            <RowDefinition Height="214"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125*"/>
            <ColumnDefinition Width="123*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="Titulo"
               Content="Sign Up"
               FontSize="50"
               FontWeight="Bold"
               HorizontalAlignment="Center" Margin="173,12,171,12" Width="202" Grid.ColumnSpan="2" Height="76"/>

        <StackPanel Grid.Row="3"
                    Margin="20,0"
                    Orientation="Horizontal" Grid.ColumnSpan="2"/>
        <Button x:Name="btnAceptar"
        Content="Aceptar"
        FontSize="20"
        FontWeight="Bold"
        Margin="37,54,101,44"
        Background="Cyan" Grid.Row="3" Click="btnAceptar_Click" Grid.Column="1"/>
        <Button x:Name="btnRegistrar"
        Content="Registrarse"
        FontSize="20"
        FontWeight="Bold"
        Margin="200,64,198,78"
        Background="Cyan" Grid.Row="4" Grid.ColumnSpan="2" Click="btnRegistrar_Click"/>

        <Button x:Name="btnLimpiar"
        Content="Limpiar"
        FontSize="20"
        FontWeight="Bold"
        Margin="86,54,67,45"
        Background="Turquoise" Grid.Row="3" Click="btnLimpiar_Click"/>

        <StackPanel Grid.ColumnSpan="2"/>

        <Label x:Name="lblEmail"
            Content="E-mail:"
            FontSize="20"
            FontWeight="Bold"
            VerticalAlignment="Center"
            Margin="0,85,76,63" Grid.Row="1" Height="36" Width="75"/>
        <TextBox x:Name="txtEmail" Margin="11,85,10,48" Grid.Row="1" Opacity="0.7" Grid.Column="1" PreviewTextInput="txtEmail_PreviewTextInput" Height="Auto"/>


        <Label x:Name="lblContra"
            Content="Contraseña:"
            FontSize="20"
            FontWeight="Bold"
            VerticalAlignment="Center"
            Margin="0,81,77,70" Grid.Row="2" Height="38" Width="121" RenderTransformOrigin="0.533,0.934"/>
        <PasswordBox x:Name="txtContra" Margin="10,81,11,57" Grid.Row="2" Opacity="0.7" Grid.Column="1"  RenderTransformOrigin="0.566,0.236"/>

        <Label x:Name="lblMensajes"
                Grid.Row="4"
               Grid.Column="1" Height="10" Margin="0,2,20,202" Width="10"/>


    </Grid>
</Window>
