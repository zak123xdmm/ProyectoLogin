<Window x:Class="PrimerLoginWPF.WinSignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrimerLoginWPF"
        mc:Ignorable="d"
       Title="SignUp" WindowStartupLocation="CenterOwner" Height="1070.85" Width="553.592" Icon="Imagenes\adult_2556984 (1).png">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Imagenes\dexter.jpg"
               Stretch="Fill"
               Opacity="0.7"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125*"/>
            <ColumnDefinition Width="123*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="Titulo"
               Content="Sign Up"
               FontSize="50"
               FontWeight="Bold"
               HorizontalAlignment="Center" Margin="148,0,146,0" Width="202" Grid.ColumnSpan="2"/>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal" Grid.ColumnSpan="2"/>
        <Label x:Name="lblNombre"
                      Content="Nombre:"
                      FontSize="20"
                      FontWeight="Bold"
                      VerticalAlignment="Center"
                      Margin="67,33,77,22" Grid.Row="1"/>
        <TextBox x:Name="txtNombre" Margin="0,35,21,9" Grid.Row="1" Opacity="0.7" Grid.Column="1" PreviewTextInput="txtNombre_PreviewTextInput"/>
        <StackPanel Grid.ColumnSpan="2"/>
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal" Grid.ColumnSpan="2"/>
        <Label x:Name="lblApPaterno"
                      Content="Ap,Paterno:"
                      FontSize="20"
                      FontWeight="Bold"
                      VerticalAlignment="Center"
                      Margin="57,40,76,15" Grid.Row="2"/>
        <TextBox x:Name="txtApMat" Margin="0,41,20,3" Grid.Row="3" Opacity="0.7" Grid.Column="1" PreviewTextInput="txtApMat_PreviewTextInput"/>
        <StackPanel Grid.ColumnSpan="2"/>
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal" Grid.ColumnSpan="2"/>
        <Label x:Name="lblApMaterno"
                      Content="Ap,Materno:"
                      FontSize="20"
                      FontWeight="Bold"
                      VerticalAlignment="Center"
                      Margin="57,41,72,14" Grid.Row="3"/>
        <TextBox x:Name="txtApPat" Margin="1,43,20,0" Grid.Row="2" Opacity="0.7" Grid.Column="1" PreviewTextInput="txtApPat_PreviewTextInput"/>
        <StackPanel Grid.ColumnSpan="2"/>
        <StackPanel Grid.Row="4"
                    Margin="20,0"
                    Orientation="Horizontal" Grid.ColumnSpan="2"/>
        <Button x:Name="btnAceptar"
        Content="Aceptar"
        FontSize="20"
        FontWeight="Bold"
        Height="60"
        Margin="54,15,93,13"
        Background="Cyan" Grid.Row="9" Click="btnAceptar_Click" Grid.Column="1"/>


        <Button x:Name="btnLimpiar"
        Content="Limpiar"
        FontSize="20"
        FontWeight="Bold"
        Height="60"
        Margin="103,14,49,14"
        Background="Turquoise" Grid.Row="9" Click="btnLimpiar_Click"/>

        <StackPanel Grid.ColumnSpan="2"/>
        <TextBlock x:Name="txBResultado"
                   Grid.Row="10"
                   Margin="10"
                   Background="Azure"
                   Opacity="0.7" Grid.ColumnSpan="2"/>
        <Label x:Name="lblEmail"
            Content="E-mail:"
            FontSize="20"
            FontWeight="Bold"
            VerticalAlignment="Center"
            Margin="57,40,76,16" Grid.Row="4"/>
        <TextBox x:Name="txtEmail" Margin="1,36,20,7" Grid.Row="4" Opacity="0.7" Grid.Column="1" PreviewTextInput="txtEmail_PreviewTextInput"/>
        <Label x:Name="lblAñoNac"
            Content="Año Nac:"
            FontSize="20"
            FontWeight="Bold"
            VerticalAlignment="Center"
            Margin="56,31,77,24" Grid.Row="6"/>
        <TextBox x:Name="txtAñoNac" Margin="0,21,21,22" Grid.Row="6" Opacity="0.7" Grid.Column="1" PreviewTextInput="txtAñoNac_PreviewTextChanged"/>
        <Label x:Name="lblContra"
            Content="Contraseña:"
            FontSize="20"
            FontWeight="Bold"
            VerticalAlignment="Center"
            Margin="56,30,77,24" Grid.Row="7"/>
        <PasswordBox x:Name="txtContra" Margin="0,17,21,24" Grid.Row="7" Opacity="0.7" Grid.Column="1"/>
        <Label x:Name="lblCelular"
            Content="Celular:"
            FontSize="20"
            FontWeight="Bold"
            VerticalAlignment="Center"
            Margin="56,40,77,15" Grid.Row="5"/>
        <TextBox x:Name="txtCel" Margin="0,33,21,10" Grid.Row="5" Opacity="0.7" Grid.Column="1"  PreviewTextInput="txtCel_PreviewTextInput"/>
        <Label x:Name="lblMensajes"
                Grid.Row="8"
               Grid.Column="2"/>


    </Grid>
</Window>
